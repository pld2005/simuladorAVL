<?xml version="1.0" encoding="utf-8"?>
<widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "com.phonegap.example"
        versionCode="10" 
        version   = "1.0.0">

    <!-- versionCode is optional and Android only -->

    <name>Simulador AVL</name>

    <description>Un simulador de seguimiento satelital</description>

    <author email="pld2005@gmail.com">Daniel Alvarez</author>

	<icon src="GPS-sattelite.png" gap:role="default"/>
	<gap:splash src="splash.png" gap:platform="android" gap:density="hdpi">
	<feature name="http://api.phonegap.com/1.0/geolocation"/>
	<feature name="http://api.phonegap.com/1.0/network"/>
    <preference name="target-device" value="universal" />
    <plugin name="SplashScreen" value="org.apache.cordova.SplashScreen"/>
    <preference name="exit-on-suspend" value="true" />
	<access origin="*" />
	
</widget>